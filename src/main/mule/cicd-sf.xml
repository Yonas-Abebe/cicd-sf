	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="f858f3ec-2568-41d4-aa60-424215f01f8a" >
		<http:listener-connection host="0.0.0.0" port="8081" />
	</http:listener-config>
	
<salesforce:sfdc-config name="Salesforce_Config" doc:name="Salesforce Config" doc:id="6a0c6e41-2268-4816-babb-a1e316793fa8" >
		<salesforce:basic-connection username="${salesforce.username}" password="${secure::salesforce.password}" securityToken="${secure::salesforce.token}"/>
	</salesforce:sfdc-config>
	
	<global-property doc:name="Global Property" doc:id="97e966de-b7df-4245-a562-6864c12165ef" name="env" value="local" />
	<configuration-properties doc:name="Configuration properties" doc:id="60fcad47-7959-4033-9223-14ed9c182be2" file="configuration\local.properties" />
	
		<secure-properties:config name="Secure_Properties_Config" doc:name="Secure Properties Config" doc:id="50679ee1-a273-445d-b635-fd080e8df0fa" file="configuration\local-secured.properties" key="Mayo7882*#*Redu2009*#*" >
		<secure-properties:encrypt algorithm="Blowfish" />
	</secure-properties:config>	

	<flow name="cicd-sfdc-queryFlow" doc:id="d02ffcb2-2d5f-40f1-991f-3fc11ffb43c9" >
