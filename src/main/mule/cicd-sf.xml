		<salesforce:query doc:id="7d98fd32-2029-4722-81d0-b2abdc6ae1f3" config-ref="Salesforce_Config" doc:name="Query" >
			<salesforce:salesforce-query ><![CDATA[SELECT ID, Name,Phone FROM Account]]></salesforce:salesforce-query>
		</salesforce:query>
		<ee:transform doc:name="Transform Message" doc:id="f26d98b3-b958-4e62-b219-c89689f72bbf" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
</mule>
